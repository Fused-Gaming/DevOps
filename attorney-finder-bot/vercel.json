{
  "version": 2,
  "name": "attorney-finder-bot",
  "builds": [
    {
      "src": "api/**/*.py",
      "use": "@vercel/python"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/webhook",
      "dest": "api/webhook.py",
      "methods": ["POST"]
    },
    {
      "src": "/api/web/(.*)",
      "dest": "api/web/$1.py"
    },
    {
      "src": "/",
      "dest": "public/index.html"
    },
    {
      "src": "/assets/(.*)",
      "dest": "public/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "public/$1"
    }
  ],
  "env": {
    "TELEGRAM_BOT_TOKEN": "@telegram_bot_token",
    "DATABASE_PATH": "/tmp/attorneys.db",
    "MAX_RESULTS_PER_SEARCH": "50",
    "SCRAPE_DELAY_SECONDS": "2"
  },
  "regions": ["iad1"]
}
