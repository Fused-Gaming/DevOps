# VLN Design Standards - Environment Configuration
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to git!

# Penpot Integration
# Get your token from: https://design.penpot.app/#/settings/access-tokens
PENPOT_ACCESS_TOKEN=your_penpot_token_here
PENPOT_API_URL=https://design.penpot.app/api

# Project Configuration
PENPOT_PROJECT_ID=your_project_id_here
PENPOT_TEAM_ID=your_team_id_here

# Design Assets Export
EXPORT_DIR=./static/design-assets
AUTO_EXPORT_ENABLED=false

# Documentation
DESIGN_DOCS_URL=https://design.vln.gg
